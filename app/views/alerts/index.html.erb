<p id="notice"><%= notice %></p>

<h1>Alerts</h1>

<table>
  <thead>
    <tr>
      <th>False alarm</th>
      <th>User generated</th>
      <th>State</th>
      <th>Dispatcher</th>
      <th>Patroller</th>
      <th>Ping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.false_alarm %></td>
        <td><%= alert.user_generated %></td>
        <td><%= alert.state %></td>
        <td><%= alert.dispatcher %></td>
        <td><%= alert.patroller %></td>
        <td><%= alert.ping %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

